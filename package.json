{
	"name": "mtgadraft",
	"version": "1.0.0",
	"description": "MTGA Direct Challenge drafting environment",
	"engines": {
		"node": "18.x"
	},
	"main": "dist/src/server.js",
	"type": "module",
	"scripts": {
		"start": "node --experimental-json-modules .",
		"start-dev": "nodemon --experimental-json-modules --watch dist/src .",
		"build": "concurrently \"tsc\" \"npx webpack --config client/webpack.config.cjs --mode=production\"",
		"build-ts": "tsc",
		"build-ts-dev": "tsc --watch",
		"build-dev": "npx webpack --config client/webpack.config.cjs --mode=development --watch --progress",
		"dev-front": "concurrently --kill-others --raw \"npm run start\" \"npm run build-dev\"",
		"dev": "concurrently --kill-others --raw \"npm run build-ts-dev\" \"npm run start-dev\" \"npm run build-dev\"",
		"test": "cross-env PORT=3001 mocha dist/test --exit --experimental-json-modules",
		"test-bail": "cross-env PORT=3001 mocha dist/test --exit --experimental-json-modules -bail",
		"manualtest": "cross-env PORT=3001 mocha dist/test/manual --exit --experimental-json-modules",
		"manualtest-bail": "cross-env PORT=3001 mocha dist/test/manual --exit --experimental-json-modules -bail",
		"fronttest": "cross-env PORT=3001 mocha dist/test/frontend --exit --experimental-json-modules",
		"fronttest-bail": "cross-env PORT=3001 mocha dist/test/frontend --exit --experimental-json-modules -bail",
		"fronttest-headless": "cross-env PORT=3001 HEADLESS=TRUE mocha dist/test/frontend --exit --experimental-json-modules",
		"fronttest-headless-bail": "cross-env PORT=3001 HEADLESS=TRUE mocha dist/test/frontend --exit --experimental-json-modules -bail",
		"prettier-format": "prettier --config .prettierrc --write src/**/*.ts test/**/*.ts test/**/*.js client/src/**/*[!min].js client/src/**/*[!min].ts client/src/**/*.vue",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Senryoku/MTGADraft.git"
	},
	"lint-staged": {
		"*.{ts,js,vue}": "prettier --config .prettierrc --write"
	},
	"author": "Senryoku",
	"license": "MIT",
	"dependencies": {
		"axios": "^0.21.2",
		"chart.js": "^4.2.1",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"floating-vue": "^2.0.0-beta.1",
		"JSONStream": "^1.3.5",
		"lz-string": "^1.5.0",
		"mixpanel": "^0.17.0",
		"pico-emitter": "^1.2.1",
		"random-js": "^2.1.0",
		"request": "^2.88.2",
		"socket.io": "^4.6.0",
		"socket.io-client": "^4.6.0",
		"sortablejs": "^1.15.0",
		"sortablejs-vue3": "^1.2.8",
		"sweetalert2": "^11.7.3",
		"threads": "^1.7",
		"uuid": "^9.0.0",
		"vue": "^3.2.47",
		"vue-chartjs": "^5.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.21.3",
		"@types/chai": "^4.3.4",
		"@types/compression": "^1.7.2",
		"@types/cookie-parser": "^1.4.3",
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.15.3",
		"@types/request": "^2.48.8",
		"@types/sortablejs": "^1.15.1",
		"@types/uuid": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"babel-loader": "^9.1.2",
		"chai": "^4.3.7",
		"concurrently": "^7.6.0",
		"copy-webpack-plugin": "^11.0.0",
		"core-js": "^3.29.1",
		"cross-env": "^7.0.3",
		"css-loader": "^6.7.3",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-vue": "^9.9.0",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"mocha": "^10.2.0",
		"prettier": "^2.8.4",
		"puppeteer": "^19.7.5",
		"source-map-support": "^0.5.21",
		"ts-loader": "^9.4.2",
		"typescript": "^5.0.2",
		"vue-loader": "^17.0.1",
		"vue-style-loader": "^4.1.3",
		"webpack": "^5.76.2",
		"webpack-bundle-analyzer": "^4.8.0",
		"webpack-cli": "^5.0.1",
		"worker-loader": "^3.0.8"
	}
}
