{
	"name": "mtgadraft",
	"version": "1.0.0",
	"description": "MTGA Direct Challenge drafting environment",
	"engines": {
		"node": "14.x"
	},
	"main": "server.js",
	"type": "module",
	"scripts": {
		"start": "node --experimental-json-modules .",
		"start-dev": "nodemon --experimental-json-modules .",
		"build": "npx webpack --config client/webpack.config.cjs --mode=production",
		"build-dev": "npx webpack --config client/webpack.config.cjs --mode=development --watch --progress --info-verbosity verbose",
		"dev-front": "concurrently --kill-others --raw \"npm run start\" \"npm run build-dev\"",
		"dev": "concurrently --kill-others --raw \"npm run start-dev\" \"npm run build-dev\"",
		"logs": "heroku logs --app mtgadraft -t --source app",
		"test": "cross-env PORT=3001 mocha test --exit --experimental-json-modules",
		"test-bail": "cross-env PORT=3001 mocha test --exit --experimental-json-modules -bail",
		"manualtest": "cross-env PORT=3001 mocha test/manual --exit --experimental-json-modules"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Senryoku/MTGADraft.git"
	},
	"author": "Senryoku",
	"license": "MIT",
	"dependencies": {
		"@babel/core": "^7.12.3",
		"JSONStream": "^1.3.5",
		"axios": "^0.21.1",
		"babel-loader": "^8.1.0",
		"chart.js": "^2.9.3",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.4",
		"core-js": "^3.6.5",
		"css-loader": "^3.6.0",
		"dotenv": "^8.2.0",
		"eslint-config-prettier": "^6.11.0",
		"express": "^4.17.1",
		"heroku-client": "^3.1.0",
		"mixpanel": "^0.11.0",
		"random-js": "^2.1.0",
		"request": "^2.88.2",
		"socket.io": "^2.4.0",
		"sweetalert2": "^9.17.2",
		"uuid": "^3.3.3",
		"v-tooltip": "^2.0.3",
		"vue": "^2.6.11",
		"vue-chartjs": "^3.5.0",
		"vue-multiselect": "^2.1.6",
		"vuedraggable": "^2.23.2"
	},
	"devDependencies": {
		"chai": "^4.2.0",
		"concurrently": "^5.3.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.12.1",
		"eslint-plugin-vue": "^7.1.0",
		"file-loader": "^6.0.0",
		"mocha": "^7.1.1",
		"vue-loader": "^15.9.2",
		"vue-template-compiler": "^2.6.11",
		"webpack": "^4.46.0",
		"webpack-bundle-analyzer": "^3.8.0",
		"webpack-cli": "^3.3.12",
		"worker-loader": "^3.0.6"
	}
}
